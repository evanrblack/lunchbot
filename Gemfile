# frozen_string_literal: true

source 'https://rubygems.org'
git_source(:github) { |repo_name| "https://github.com/#{repo_name}" }

# Handles durations
gem 'iso8601'
# Web server
gem 'puma'
# Job queue
gem 'resque'
# Job scheduler
gem 'resque-scheduler'
# Database toolkit
gem 'sequel'
# Web framework
gem 'sinatra'
# Database driver
gem 'sqlite3'
# HTTP Client
gem 'faraday'

group :development do
  # Data generator
  gem 'faker'
  # Test suite
  gem 'minitest'
  # Pretty test results
  gem 'minitest-reporters'
  # Better console
  gem 'pry'
  # Task manager
  gem 'rake'
  # Linter
  gem 'rubocop'
end
